# directories for cpp

$base = "#{ENV['HOME']}/local/dbxml"

$include = {
   'db' => "#{$base}/include",
   'dbxml' => "#{$base}/include",
   'xercesc' => "#{$base}/include/xercesc",
   'xqilla' => "#{$base}/include/xqilla"
}

# [directory, library] for ld

# it's important to have xercesc compiled with -rnone 
# (i.e. *without* threads)

$library = {
   'db' => ["#{$base}/lib/", ["db-4.6", "db_cxx-4.6"]],
   'dbxml' => ["#{$base}/lib", "dbxml-2.4"],
   'xqilla' => ["#{$base}/lib", "xqilla"],
   'xercesc' => ["#{$base}/lib", "xerces-c"],
}

# order for ld (don't change it)

$order = ['dbxml', 'db', 'xqilla', 'xercesc']
