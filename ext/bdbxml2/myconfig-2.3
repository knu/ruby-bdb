   'db' => ["#{$base}/lib/", ["db-4.5", "db_cxx-4.5"]],
   'dbxml' => ["#{$base}/lib", "dbxml-2.3"],
   'xqilla' => ["#{$base}/lib", "xqilla"],
   'xercesc' => ["#{$base}/lib", "xerces-c"],
}

